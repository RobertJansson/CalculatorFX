<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="360.0" minWidth="320.0" prefHeight="360.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.kvicktajm.view.CMenuController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#toggleAdvanced" text="Toggle advanced">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="DIGIT1" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Save..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Copy">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="C" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator></MenuItem>
                  <MenuItem mnemonicParsing="false" text="Paste">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="V" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator></MenuItem>
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Constants">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#pi" text="Pi" />
                  <MenuItem mnemonicParsing="false" onAction="#speedOfLight" text="Speed of light" />
                  <MenuItem mnemonicParsing="false" onAction="#ultimateAnswer" text="Ultimate answer" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Convert">
               <items>
                  <MenuItem mnemonicParsing="false" text="m/s -&gt; km/h" />
                  <MenuItem mnemonicParsing="false" text="m/s &lt;- km/h" />
                  <MenuItem mnemonicParsing="false" text="inch -&gt; m" />
                  <MenuItem mnemonicParsing="false" text="inch &lt;- m" />
                  <MenuItem mnemonicParsing="false" text="feet -&gt; m" />
                  <MenuItem mnemonicParsing="false" text="feet &lt;- m" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
